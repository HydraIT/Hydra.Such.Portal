    <script>
        document.addEventListener('WebComponentsReady', function () {
            Polymer({
                is: 'x-simplifiedreqdetails',
                properties: {
                    _requestno: {
                        type: String,
                        notify: true,
                        value: ""
                    },
                    _permissions: {
                        type: Array
                    },
                   
                    _isCreate: {
                        type: Boolean,
                        value: true
                    },
                    _lockFields: {
                        type: Boolean,
                        value: true
                    },
                    _SelectedLine: {
                        observer: '_lineSelected'
                    },
                    selected: {
                        type: Number,
                        value: 0
                    },
                },
                ready: function () {

                    //GET PROJECT DATA
                    this.$.page_databound_ajax.body = JSON.stringify({ "RequisitionNo":  @ViewBag.RequestNo });
                    this.$.page_databound_ajax.generateRequest();
                    if ("@ViewBag.Approval" == "aprovado") {
                        this.$.formLinesReq.style.display = 'none';
                        this.$.ddmarginSpace.style.display = 'none';
                    }
                    else {
                        this.$.ddmarginSpace2.style.display = 'none';
                    }
                    this.$.contractLines_databound_ajax.body = JSON.stringify({ "RequisitionNo":  @ViewBag.RequestNo });
                    this.$.contractLines_databound_ajax.generateRequest();

                },
                _openToast: function (message) {
                    this.$.ToastMessageSuccess.text = message;
                    this.$.ToastMessageSuccess.open();
                },
                _openToastError: function (message) {
                    this.$.ToastMessageError.text = message;
                    this.$.ToastMessageError.open();
                },
                _validateData: function () {
                    if (this.$.LCode.validate() &
                        this.$.LName.validate() &
                        this.$.LAddress.validate() &
                        this.$.LCity.validate() &
                        this.$.LPhone.validate() &
                        this.$.LFax.validate() &
                        this.$.LContact.validate() &
                        this.$.LZipCode.validate() &
                        this.$.LEmail.validate() &
                        this.$.LSupplierLocation.validate()) {
                        return true;
                    }
                    return true;
                },
                _createNew: function () {
                    window.location.href = "/Nutricao/RequisicoesSimplificadas/Detalhes";
                },

                //CRUDS
              
                _create: function () {
                    if (this._validateData()) {
                        this._executeRequest("/Nutricao/RequisicoesSimplificadas/CreateSimplifiedRequisition", this.data)
                    }
                },
                _update: function () {
                    this._executeRequest("/Nutricao/RequisicoesSimplificadas/UpdateSimplifiedRequisition", this.data)
                },
                _desaprovarRequisiApproval: function () {
                    this.$.register_requisitions_ajax.url = "/Nutricao/RequisicoesSimplificadas/DisapproveSimplifiedRequisition";
                    this.$.register_requisitions_ajax.body = JSON.stringify(this.dataLines);
                    this.$.register_requisitions_ajax.generateRequest();
                },
                _registeRequisiApproval: function () {
                    this.$.register_requisitions_ajax.url = "/Nutricao/RequisicoesSimplificadas/RegisterRequisition";
                    this.$.register_requisitions_ajax.body = JSON.stringify(this.dataLines);
                    this.$.register_requisitions_ajax.generateRequest();
                },
                _updateResquesitionLines: function () {
                    this.$.update_lines_requisition_ajax.url = "/Nutricao/RequisicoesSimplificadas/UpdateSimplifiedRequisitionLines";
                    this.$.update_lines_requisition_ajax.body = JSON.stringify(this.dataLines);
                    this.$.update_lines_requisition_ajax.generateRequest();
                },
                _historyRequisiApproval: function () {
                    this.$.register_requisitions_ajax.url = "/Nutricao/RequisicoesSimplificadas/HistorySimplifiedRequisition";
                    this.$.register_requisitions_ajax.body = JSON.stringify(this.dataLines);
                    this.$.register_requisitions_ajax.generateRequest();
                },
                _delete: function () {
                    var data = this.data;
                    var ajax_request = this.$.ajax_delete_project;
                    bootbox.confirm({
                        message: "Tem a certeza que pretende remover a Requisição Simplificada " + this.data.requestNo + "?",
                        buttons: {
                            confirm: {
                                label: 'Sim',
                                className: 'btn-success'
                            },
                            cancel: {
                                label: 'Não',
                                className: 'btn-danger'
                            }
                        },
                        callback: function (result) {
                            if (result) {
                                ajax_request.body = JSON.stringify(data);
                                ajax_request.generateRequest();
                            }
                        }
                    });
                },

                _deleteRequisitionsLine: function (data) {        
                    var ajax_request = this.$.ajax_delete_lines_project;
                    var dataline = data.model.item;
                    var index = this.dataLines.indexOf(dataline);
                    this.dataLines.splice(index, 1);
                    
                    bootbox.confirm({
                        message: "Tem a certeza que pretende remover a  Linha Requisição Simplificada ?",
                        buttons: {
                            confirm: {
                                label: 'Sim',
                                className: 'btn-success'
                            },
                            cancel: {
                                label: 'Não',
                                className: 'btn-danger'
                            }
                        },
                        callback: function (result) {
                            if (result) {
                                
                                ajax_request.body = JSON.stringify(dataline);
                                ajax_request.generateRequest();

                            }
                        }
                    });

                },
                _onChangeProduct: function (data) {
                    if (data.model != null) {
                        this.$.ajax_get.url = "/Nutricao/GetUnitStockeepingId";
                        this.$.ajax_get.body = JSON.stringify(data.model.item.code);
                        this.$.ajax_get.generateRequest();

                    }
                },
                _responseChangeProduct: function () {
                    this.dataLines.find(x => x == this._SelectedLine).description = this.unitStockeeping.description;
                    this.dataLines.find(x => x == this._SelectedLine).measureUnitNo = this.unitStockeeping.codeUnitMeasure;
                    this.$.grid_requisitionlines.clearCache();

                },

                //Responses Processors
                _responseProcessor: function (data) {
                    var self = this;
                    if (this.data.code != "" && this.data.code != null) {
                        this._isCreate = false
                    }
                    if (data.detail.status === 200) {
                        if (data.detail.url.indexOf("Update") !== -1 || data.detail.url.indexOf("Create") !== -1) {
                            if (this.data.eReasonCode == 100) {
                                this._openToast(this.data.eMessage);
                            } else {
                                this._openToastError(this.data.eMessage);
                            }
                        }
                    } else {
                        this._openToastError("Ocorreu um erro.")
                    }
                },
                _responseProcessorLines: function (dataUpdate) {
                    if (dataUpdate.detail.status === 200) {
                       
                        if (this.updateLines.eReasonCode == 100) {
                            this._openToast(this.updateLines.eMessage);
                        
                            } else {
                            this._openToastError(this.updateLines.eMessage);
                              
                            }
                     
                    } else {
                        this._openToastError("Ocorreu um erro.")
                    }
                },
                _responseProcessorRegister: function (data) {
                    if (data.detail.status === 200) {
                            if (this.data.eReasonCode == 100) {
                                this._openToast(this.data.eMessage);
                                window.location.href = "/Nutricao/RequisicoesSimplificadas/Index/?option=" + 1;
                            } else {
                                this._openToastError(this.data.eMessage);
                            }
                   
                    } else {
                        this._openToastError("Ocorreu um erro.")
                    }
                },
                _responseDeleteProcessor: function (data) {
                    var self = this;
                    if (data.detail.status === 200) {
                        this._openToast(this.deletedData.eMessage);
                        if (this.deletedData.eReasonCode == 100) {
                            setTimeout(
                                function () {
                                    window.location.href = "/Nutricao/RequisicoesSimplificadas";
                                }, 2500);
                        } else if (this.deletedData.eReasonCode == 101) {
                            this._openToastError(this.deletedData.eMessage);
                        }
                    }
                },
                _responseDeleteLinesProcessor: function (data) {
                    var self = this;
                    if (data.detail.status === 200) {
                        this._openToast(this.deletedData.eMessage);
                        if (this.deletedData.eReasonCode == 100) {
                            this.$.grid_requisitionlines.clearCache();
                            this._openToast(this.deletedData.eMessage);
                        } else if (this.deletedData.eReasonCode == 101) {
                            this._openToastError(this.deletedData.eMessage);
                        }
                    }
                },
                //Helpers
                _executeRequest: function (url, data) {
                    this.$.page_databound_ajax.url = url;
                    this.$.page_databound_ajax.body = JSON.stringify(data);
                    this.$.page_databound_ajax.generateRequest();

                },


                _lineSelected: function (item) {
                    if (item != null) {
                        var oSel = this.dataLines.find(x => x.selected);
                        if (oSel != undefined) {
                            oSel.selected = false;
                        }

                        var sel = this.dataLines.find(x => x == item);
                        if (sel != undefined) {

                            this.dataLines.find(x => x == item).selected = true;
                            this.$.grid_requisitionlines.clearCache();
                        }
                    }
                },
               
                _mealTypeChanged: function (e) {
                    if (this.dataLines != null && e.detail.value != null && e.detail.value != "") {
                        var count = this.dataLines.length;
                        for (var i = 0; i < count; i++) {
                            this.dataLines[i].mealType = e.detail.value;
                            //description meal
                            
                            var meals = $.grep(this.CBMealType, function (x) { return x.id == e.detail.value; });
                            if (meals != null && meals.length > 0) {
                                var meal = meals[0];
                                this.dataLines[i].descriptionMeal = meal.value;
                            }
                        }
                        this.$.grid_requisitionlines.clearCache();

                    }
                },
               
                _regionCodeChanged: function () {
                    if (this.dataLines != null) {
                        var count = this.dataLines.length;
                        for (var i = 0; i < count; i++) {
                            this.dataLines[i].regionCode = this.$.RegionCode.value;
                        }
                        this.$.grid_requisitionlines.clearCache();

                    }
                },
                _projectoNoChanged: function () {
                    if (this.dataLines != null) {
                        var count = this.dataLines.length;
                        for (var i = 0; i < count; i++) {
                            this.dataLines[i].projectNo = this.$.ProjectNo.value;
