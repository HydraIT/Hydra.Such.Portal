                            this.dataLines[i].responsabilityCenterCode = this.$.ResponsabilityCenterCode.value;

                        }
                        this.$.grid_requisitionlines.clearCache();

                    }
               },
               _descriptionMeal: function (param) {
                   if (param != undefined) { 
                       var sel = this.CBMealType.find(x => x.id == param);
                       if (sel != undefined) {
                           return sel.value;
                       }
                   }
                   return "";
