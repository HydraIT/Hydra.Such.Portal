<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <link rel="shortcut icon" sizes="196x196" href="~/Infinity/assets/images/logo1.png">
    <title>e-SUCH</title>

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
    @*<link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true" />*@

    <link rel="stylesheet" href="~/Infinity/libs/bower/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Infinity/libs/bower/material-design-iconic-font/dist/css/material-design-iconic-font.css">
    <!-- build:css ../assets/css/app.min.css -->
    <link rel="stylesheet" href="~/Infinity/libs/bower/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/Infinity/libs/bower/fullcalendar/dist/fullcalendar.min.css">
    <link rel="stylesheet" href="~/Infinity/libs/bower/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/Infinity/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/lib/select2-wrapper/select2.min.css">
    <link rel="stylesheet" href="~/Infinity/assets/css/core.css">
    <link rel="stylesheet" href="~/Infinity/assets/css/app.css">
    <link rel="stylesheet" href="~/css/main.css" />
    <!-- endbuild -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400,500,600,700,800,900,300">
    <script src="~/Infinity/libs/bower/breakpoints.js/dist/breakpoints.min.js"></script>
    <script>
        Breakpoints();
    </script>

    <!-- POLYMER IMPORTS -->
    <link rel="import" href="/lib/polymer/polymer-element.html" />
    <link rel="import" href="/lib/iron-ajax/iron-ajax.html" />

    <style type="text/css">
        .navbar-toolbar > li {
            background-color: #FFF0 !important;
        }
    </style>
</head>
<body class="menubar-left menubar-unfold menubar-light theme-primary">
    <!--============= start main area -->
    <!-- APP NAVBAR ==========-->
    <nav id="app-navbar" class="navbar navbar-inverse navbar-fixed-top primary">

        <!-- navbar header -->
        <div class="navbar-header">
            <button type="button" id="menubar-toggle-btn" class="navbar-toggle visible-xs-inline-block navbar-toggle-left hamburger hamburger--collapse js-hamburger">
                <span class="sr-only">Toggle navigation</span>
                <span class="hamburger-box"><span class="hamburger-inner"></span></span>
            </button>
            <button type="button" class="navbar-toggle navbar-toggle-right collapsed" data-toggle="collapse" data-target="#app-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="zmdi zmdi-hc-lg zmdi-more"></span>
            </button>
            @*<button type="button" class="navbar-toggle navbar-toggle-right collapsed" data-toggle="collapse" data-target="#navbar-search" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="zmdi zmdi-hc-lg zmdi-search"></span>
                </button>*@
            <a href="/" class="navbar-brand">
                <span class="brand-icon">
                    <img src="~/images/esuchSVG-02.svg" alt="">
                </span>
                @*<span class="brand-name" style="color: black;">SUCH</span>*@
            </a>
        </div><!-- .navbar-header -->

        <div class="navbar-container container-fluid">
            <div class="collapse navbar-collapse" id="app-navbar-collapse">
                <ul class="nav navbar-toolbar navbar-toolbar-left navbar-left">
                    <li class="hidden-float hidden-menubar-top">
                        <a href="javascript:void(0)" role="button" id="menubar-fold-btn" class="hamburger hamburger--arrowalt js-hamburger">
                            <span class="hamburger-box"><span class="hamburger-inner"></span></span>
                        </a>
                    </li>
                    <li>
                        <h5 class="page-title hidden-menubar-top hidden-float">@ViewData["Title"]</h5>
                    </li>
                </ul>

                <div class="page-title hidden-menubar-top hidden-float pull-right">
                    <div class="dropdown">
                        <a href="JavaScript: location.reload(true);" class="dropdown-toggle" type="button">
                            <i class="fa fa-refresh"></i> Atualizar &nbsp;&nbsp;&nbsp;
                        </a>

                        <a href="javascript:void(0)" class="dropdown-toggle" type="button" data-toggle="dropdown">
                            @User.Identity.Name &nbsp;
                            <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li class="grey"><a href="@Url.Action("EndSession", "Account")"><i class="fa fa-sign-out" aria-hidden="true"></i> &nbsp;Sair</a> </li>
                        </ul>
                    </div>&nbsp;&nbsp;&nbsp;
                    <div class="clearfix"></div>

                </div>
            </div>
        </div><!-- navbar-container -->
    </nav>
    <!--========== END app navbar -->
    <!-- APP ASIDE ==========-->
    <aside id="menubar" class="menubar light menubar-resizable">
        <div class="after"></div>
        <div class="menubar-scroll">
            <div class="menubar-scroll-inner">
                @Html.Partial("Menu/_Menu", (List<MenuViewModel>)ViewBag._menu)
            </div>
        </div>
    </aside>
    <!--========== END app aside -->
    <!-- navbar search -->
    <!-- .navbar-search -->
    <!-- APP MAIN ==========-->
    <main id="app-main" class="app-main">
        <div class="wrap">
            <section class="app-content">

                <div class="row">
                    @RenderBody()
                </div><!-- .row -->
            </section><!-- #dash-content -->
        </div><!-- .wrap -->
        <!-- APP FOOTER -->
        <!-- /#app-footer -->
    </main>
    <!--========== END app main -->
    <!-- APP CUSTOMIZER -->
    <!-- SIDE PANEL -->
    <!-- /#side-panel -->
    <!-- build:js ~/Infinity/assets/js/core.min.js -->
    <script src="~/Infinity/libs/bower/jquery/dist/jquery.js"></script>
    <script src="~/Infinity/libs/bower/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Infinity/libs/bower/jQuery-Storage-API/jquery.storageapi.min.js"></script>
    <script src="~/Infinity/libs/bower/bootstrap-sass/assets/javascripts/bootstrap.js"></script>
    <script src="~/Infinity/libs/bower/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Infinity/libs/bower/perfect-scrollbar/js/perfect-scrollbar.jquery.js"></script>
    <script src="~/Infinity/libs/bower/PACE/pace.min.js"></script>
    <!-- endbuild -->
    <!-- build:js ~/Infinity/assets/js/app.min.js -->
    <script src="~/Infinity/assets/js/library.js"></script>
    <script src="~/Infinity/assets/js/plugins.js"></script>
    <script src="~/Infinity/assets/js/app.js"></script>
    <!-- endbuild -->
    <script src="~/Infinity/libs/bower/moment/moment.js"></script>
    <script src="~/Infinity/libs/bower/fullcalendar/dist/fullcalendar.min.js"></script>
    <script src="~/Infinity/assets/js/fullcalendar.js"></script>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/lib/webcomponentsjs/webcomponents-loader.js"></script>
    <script src="/lib/sweetalert.min.js"></script>
    <script src="/lib/bootbox.min.js"></script>
    <script src="/lib/currency.min.js"></script>

    <script>
        var TotalPendingApprovals = '@HttpContextAccessor.HttpContext.Session.GetString("totalPendingApprovals")';
        if (TotalPendingApprovals != "0" && TotalPendingApprovals != undefined) {
            //$('#approvalPendingShow').hide();
                $('#pendingApprovalsLink').text('Aprovações Pendentes (' + TotalPendingApprovals + ')');
            } else {
                $('#approvalPendingShow').hide();
            }

            //$(".menu-content > li").click(function () {
            //    $(".menu-content").find(".sub-menu").not($(this).next('.sub-menu')).removeClass("in");
            //});

    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>
    <script src="~/lib/select2-wrapper/select2.full.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>



</html>
