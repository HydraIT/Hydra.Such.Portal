@{
    ViewData["Title"] = "Receção de Faturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="import" href="/lib/vaadin-themable-mixin/vaadin-themable-mixin.html" />
<link rel="import" href="/lib/vaadin-grid/vaadin-grid.html" />
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-sorter.html" />
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-sort-behavior.html" />
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-filter.html" />
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-filter-behavior.html" />
<link rel="import" href="/lib/vaadin-date-picker/vaadin-date-picker.html" />
<link rel="import" href="/lib/iron-form/iron-form.html" />
<link rel="import" href="/lib/paper-input/paper-input.html" />
<link rel="import" href="/lib/paper-checkbox-master/paper-checkbox.html" />
<link rel="import" href="/lib/paper-button/paper-button.html" />
<link rel="import" href="/lib/datetime-picker-master/date-picker.html" />
<link rel="import" href="/lib/paper-toast-master/paper-toast.html" />

<x-rececaofaturas></x-rececaofaturas>

<dom-module id="x-rececaofaturas">
    <template>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/main.css" />
        <custom-style>
            <style is="custom-style">
                input[readonly] {
                    border: 2px solid transparent;
                }

                input {
                    font: inherit;
                }

                .grid {
                    font-size: 13px;
                }

                    .grid input {
                        border: none;
                        padding-left: 5px;
                    }

                paper-input {
                    max-width: 200px !important;
                }
            </style>
        </custom-style>

        <iron-ajax url="/Faturacao/GetBillingReceptions"
                   auto
                   last-response="{{BillingReceptions}}"
                   method="post"
                   handle-as="json"
                   id="grid_databound_ajax"
                   content-type="application/json">
        </iron-ajax>

        <div class="subMenu">
            <template is="dom-if" if="{{ _permissions.create }}">
                <paper-button class="tablinks" on-tap="_create"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Criar Nova</paper-button>
            </template>
        </div>

        <vaadin-grid aria-label="grdBillingReceptions" items="[[BillingReceptions]]" class="grid" active-item="{{activeItem}}" multi-sort="true">
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="id">Nº</vaadin-grid-sorter>
                    <vaadin-grid-filter path="id" />
                </template>
                <template>
                    {{item.id}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="tipoDocumento">Tipo de Documento</vaadin-grid-sorter>
                    <vaadin-grid-filter path="tipoDocumento" />
                </template>
                <template>
                    {{item.tipoDocumento}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="estado">Estado</vaadin-grid-sorter>
                    <vaadin-grid-filter path="estado" />
                </template>
                <template>
                    {{item.estado}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="dataRececao">Data de Receção</vaadin-grid-sorter>
                    <vaadin-grid-filter path="dataRececao" />
                </template>
                <template>
                    {{item.dataRececao}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="codFornecedor">Fornecedor</vaadin-grid-sorter>
                    <vaadin-grid-filter path="codFornecedor" />
                </template>
                <template>
                    {{item.codFornecedor}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="numDocFornecedor">Núm. Doc. Fornecedor</vaadin-grid-sorter>
                    <vaadin-grid-filter path="numDocFornecedor" />
                </template>
                <template>
                    {{item.numDocFornecedor}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="dataDocFornecedor">Data Doc. Fornecedor</vaadin-grid-sorter>
                    <vaadin-grid-filter path="dataDocFornecedor" />
                </template>
                <template>
                    {{item.dataDocFornecedor}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="numEncomenda">Núm. Encomenda</vaadin-grid-sorter>
                    <vaadin-grid-filter path="numEncomenda" />
                </template>
                <template>
                    {{item.numEncomenda}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="numEncomendaManual">Núm. Encomenda Manual</vaadin-grid-sorter>
                    <vaadin-grid-filter path="numEncomendaManual" />
                </template>
                <template>
                    {{item.numEncomendaManual}}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
