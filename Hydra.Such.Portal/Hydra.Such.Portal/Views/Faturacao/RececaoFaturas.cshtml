                    <vaadin-grid-filter path="areaPendente" />
                </template>
                <template>
                    {{ item.areaPendente }}
                </template>
            </vaadin-grid-column>
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="dataUltimaInteracao">Data Última Interação</vaadin-grid-sorter>
                    <vaadin-grid-filter path="dataUltimaInteracao" />
                </template>
                <template>
                    {{ item.dataUltimaInteracao }}
                </template>
            </vaadin-grid-column>
        </vaadin-grid>
    </template>
    <script>
        document.addEventListener('WebComponentsReady', function () {
            Polymer({
                is: 'x-rececaofaturas',
                properties: {
                    activeItem: {
                        observer: '_rowSelected'
                    },
                    _permissions: {
                        type: Array,
                        value: @Html.Raw(Json.Serialize(ViewBag.UserPermissions)),
                    },
                },
                _rowSelected: function (item) {
                    if (item != null) {
                        window.location.href = "/Faturacao/DetalhesRecFatura/" + item.id;
                    }
                },
                _create: function () {
                    window.location.href = "/Faturacao/DetalhesRecFatura";
                },
            });
        });
    </script>
</dom-module >
