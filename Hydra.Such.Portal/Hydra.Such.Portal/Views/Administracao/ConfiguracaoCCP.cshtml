@{
    ViewData["Title"] = "Configuração CCP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="import" href="~/lib/paper-tabs-master/paper-tab.html" />
<link rel="import" href="~/lib/paper-tabs-master/paper-tabs.html" />
<link rel="import" href="~/lib/iron-pages-master/iron-pages.html" />
<link rel="import" href="~/lib/iron-menu-behavior/iron-menubar-behavior.html" />
<link rel="import" href="~/lib/iron-form/iron-form.html" />

<link rel="import" href="~/lib/vaadin-valo-theme/vaadin-combo-box.html" />
<link rel="import" href="~/lib/vaadin-combo-box/vaadin-combo-box.html" />
<link rel="import" href="~/lib/paper-button/paper-button.html" />
<link rel="import" href="/lib/paper-toast-master/paper-toast.html" />
<link rel="import" href="~/lib/datetime-picker-master/time-element.html" />
<link rel="import" href="~/lib/datetime-picker-master/time-picker.html" />


<link rel="import" href="/elements/comboboxs/NumerationsList.html">

<x-configurations></x-configurations>
<dom-module id="x-configurations">
    <template>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/main.css" />

        @*POPULATE DATA*@
        <iron-ajax url="/Administracao/GetConfiguracaoCCP"
                   last-response="{{data}}"
                   id="ajax_populate"
                   auto
                   method="post"
                   handle-as="json"
                   content-type="application/json">
        </iron-ajax>

        @*UPDATE INFO*@
        <iron-ajax url="/Administracao/UpdateConfiguracaoCCP"
                   id="ajax_update"
                   last-response="{{data}}"
                   method="post"
                   handle-as="json"
                   on-response="_updateResponse"
                   content-type="application/json; charset=utf-8">
        </iron-ajax>

        <iron-form>
            <div class="subMenu">
                <template is="dom-if" if="{{ _permissions.update }}">
                    <paper-button id="btnGoBack" class="tablinks" on-tap="_goBack"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp; Voltar</paper-button>
                    <paper-button id="btnAddNew" class="tablinks" on-tap="_update"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp; Guardar</paper-button>
                    <paper-button id="btnCancel" class="tablinks" on-tap="_cancel"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp; Cancelar</paper-button>
                </template>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Jurídidos 1</h3>
                    <vaadin-text-field id="emailJurididos" value="{{data.emailJurididos}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Jurídicos 2</h3>
                    <vaadin-text-field id="email2Juridicos" value="{{data.email2Juridicos}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Financeiros 1</h3>
                    <vaadin-text-field id="emailFinanceiros" value="{{data.emailFinanceiros}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Financeiros 2</h3>
                    <vaadin-text-field id="email2Financeiros" value="{{data.email2Financeiros}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email CA</h3>
                    <vaadin-text-field id="emailCa" value="{{data.emailCa}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Contabilidade 1</h3>
                    <vaadin-text-field id="emailContabilidade" value="{{data.emailContabilidade}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Contabilidade 2</h3>
                    <vaadin-text-field id="email2Contabilidade" value="{{data.email2Contabilidade}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Contabilidade 3</h3>
                    <vaadin-text-field id="email3Contabilidade" value="{{data.email3Contabilidade}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 1</h3>
                    <vaadin-text-field id="emailCompras" value="{{data.emailCompras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 2</h3>
                    <vaadin-text-field id="email2Compras" value="{{data.email2Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 3</h3>
                    <vaadin-text-field id="email3Compras" value="{{data.email3Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 4</h3>
                    <vaadin-text-field id="email4Compras" value="{{data.email4Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 5</h3>
                    <vaadin-text-field id="email5Compras" value="{{data.email5Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 6</h3>
                    <vaadin-text-field id="email6Compras" value="{{data.email6Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>

            <div class="row break_clear">
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 7</h3>
                    <vaadin-text-field id="email7Compras" value="{{data.email7Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 8</h3>
                    <vaadin-text-field id="email8Compras" value="{{data.email8Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 9</h3>
                    <vaadin-text-field id="email9Compras" value="{{data.email9Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 10</h3>
                    <vaadin-text-field id="email10Compras" value="{{data.email10Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
                <div class="col-sm-2 ">
                    <h3 class="titleLabel">Email Compras 11</h3>
                    <vaadin-text-field id="email11Compras" value="{{data.email11Compras}}" maxlength="50" disabled="{{ _permissionsCreate }}"></vaadin-text-field>
                </div>
            </div>
        </iron-form>

        <paper-toast id="ToastMessageSuccess" duration="4000" horizontalAlign="right" class="toastSuccess">&nbsp;<i class="fa fa-check fa-lg" aria-hidden="true"></i></paper-toast>
        <paper-toast id="ToastMessageError" duration="4000" horizontalAlign="right" class="toastError">&nbsp;<i class="fa fa-exclamation-triangle" aria-hidden="true"></i></paper-toast>

    </template>
    <script>
        document.addEventListener('WebComponentsReady', function () {
            Polymer({
                is: 'x-configurations',
                properties: {
                    selected: {
                        type: Number,
                        value: 0
                    },
                    _permissions: {
                        type: Array,
                        value: @Html.Raw(Json.Serialize(ViewBag.UPermissions))
                    },
                },

                openToast: function (message) {
                    this.$.ToastMessageSuccess.text = message;
                    this.$.ToastMessageSuccess.open();
                },
                openToastError: function (message) {
                    this.$.ToastMessageError.text = message;
                    this.$.ToastMessageError.open();
                },

                _update: function () {
                    this.$.ajax_update.url = "/Administracao/UpdateConfiguracaoCCP";
                        this.$.ajax_update.body = JSON.stringify(this.data);
                        this.$.ajax_update.generateRequest();
                },

                _updateResponse: function (e) {
                    var self = this;
                    if (e.detail.status === 200) {
                        this.openToast("Configuração CCP atualizada.");
                    }
                    else {
                        this.openToastError("Occorreu um erro ao atualizar as configurações.");
                    }
                },

                _cancel: function () {
                    this.$.ajax_populate.generateRequest();
                },

                _goBack: function (e) {
                    window.history.back();
                }
            });
        });
    </script>
</dom-module>
