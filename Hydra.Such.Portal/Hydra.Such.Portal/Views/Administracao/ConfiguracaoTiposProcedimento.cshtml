            vaadin-combo-box {
                margin-top: 0px !important;
                width: 100% !important;
            }

            vaadin-date-picker {
                margin-top: 0px !important;
                width: 100% !important;
            }

            vaadin-text-field {
                margin-top: 0px !important;
                width: 100%;
            }

            paper-button {
                margin-top: 10px;
            }

                paper-button.disabled {
                    cursor: not-allowed;
                    pointer-events: none;
                }

            .break_clear {
                margin-top: 15px;
                margin-right: 0px !important;
                margin-left: 0px !important;
            }

            .break_frm {
                margin-top: 15px;
            }

            .label_custom {
                color: var(--valo-contrast-60pct) !important;
                font-weight: 500 !important;
                font-size: var(--valo-font-size-s) !important;
                margin-left: calc(var(--valo-text-field-border-radius, var(--valo-border-radius)) / 4) !important;
                margin-bottom: var(--valo-space-xs) !important;
                transition: color 0.4s !important;
                line-height: 1 !important;
                font-family: var(--valo-font-family) !important;
            }

            datetime-picker {
                border-radius: var(--valo-text-field-border-radius, var(--valo-border-radius));
                background-color: var(--valo-contrast-5pct);
                color: var(--valo-contrast-60pct) !important;
                width: 100%;
            }

            .marginSpace {
                margin: 0px !important;
            }

            textarea {
                background-color: #f5f5f5;
                border: none;
                border-radius: 3px 4px;
                align-self: baseline;
                font-weight: 500;
            }

                textarea:hover {
                    background-color: #eeeeee;
                }

                textarea:focus {
                    background-color: white;
                    border: none;
                    outline: 1px solid #eeeeee;
                    border-radius: 3px 4px;
                }

            datetime-picker {
                --datetime-selected-background: #71BCC1 !important;
                --datetime-background: #1f3133;
                --datetime-color: #eeeeee;
            }

            /*ACORDEÃO*/
            paper-collapse-item {
                --paper-item: {
                    padding: 0 0;
                };
                --paper-collapse-item-header: {
                    padding: 0 15px;
                    color: #333;
                    background-color: #f5f5f5;
                    border-bottom: solid #ddd 1px;
                    border-top-left-radius: 3px;
                    border-top-right-radius: 3px;

                };
            }

            vaadin-time-picker {
                --vaadin-combo-box-overlay-max-height: 250px;
            }
        </style>

        <iron-ajax url="/Administracao/GetTipoProcedimentoDetails"
                   last-response="{{ data }}"
                   method="post"
                   handle-as="json"
                   id="page_databound_ajax"
                   on-response="_responseProcessor"
                   content-type="application/json">
        </iron-ajax>

        <div class="subMenu">
            <paper-button class="tablinks" on-tap="_goBack" title="Voltar"><i class="fa fa-arrow-left" aria-hidden="true"></i> Voltar</paper-button>
        </div>
        <div class="row break_frm">
            <iron-form id="formContract">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-md-12 col-md-12 col-lg-12">
                                    <div class="row break_clear">
                                        <div class="col-md-1">
                                            <vaadin-text-field id="idTipo" name="idTipo" label="Código" value="{{ data.idTipo }}" disabled="disabled"></vaadin-text-field>
                                        </div>
                                        <div class="col-md-3">
                                            <vaadin-text-field id="abreviatura" name="abreviatura" label="Abreviatura" value="{{ data.abreviatura }}"></vaadin-text-field>
                                        </div>
                                        <div class="col-md-8">
                                            <such-textarea rows="2" value="{{ data.descricaoTipo }}" id="descricaoTipo" name="descricaoTipo" label="Descrição"></such-textarea>
                                            @*<vaadin-text-field id="descricaotipo" name="descricaoTipo" label="Descrição" value="{{ data.descricaoTipo }}"></vaadin-text-field>*@
                                        </div>
                                    </div>
                                    <div class="row break_clear">
                                        <div class="col-md-3">
                                            <vaadin-checkbox id="activo" name="activo" checked="{{ data.activo }}">Activo?</vaadin-checkbox>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <paper-collapse-group>
                            <paper-collapse-item class="panel-heading" header="Fundamentos Legais para o Tipo" opened>
                                <div class="row break_clear">
                                    <vaadin-grid aria-label="fundamentosTipoLines" id="gridFundamentosTipo" name="gridFundamentosTipo" items="[[ data.fundamentos ]]" class="grid" multi-sort="true">
                                        <vaadin-grid-column width="90%">
                                            <template class="header">
                                                Descrição Fundamento
                                            </template>
                                            <template>
                                                <vaadin-text-field id="descricaoFundamento" name="descricaoFundamento" value="{{ item.descricaoFundamento }}"></vaadin-text-field>
                                            </template>
                                        </vaadin-grid-column>
                                        <vaadin-grid-column width="10%">
                                            <template class="header">
                                                <center>
                                                    Activo?
                                                </center>
                                            </template>
                                            <template>
                                                <center>
                                                    <vaadin-checkbox id="activo" checked="{{ item.activo }}"></vaadin-checkbox>
                                                </center>
                                            </template>
                                        </vaadin-grid-column>
                                    </vaadin-grid>
                                </div>

                            </paper-collapse-item>
                        </paper-collapse-group>
                    </div>
                </div>
            </iron-form>
        </div>
    </template>
    <script>
        document.addEventListener('WebComponentsReady', function () {
            Polymer({
                is: 'x-ccptypeconfig',
                properties: {
                    _permissions: {
                        type: Array,
                        value: @Html.Raw(Json.Serialize(ViewBag.UPermissions))
                    },
                    _idtipodetail: {
                        type: Number,
                        notify:true
                    },
                    _reportserverurl: {
                        type: String,
                    },
                    _tipo: {
                        type: Number,
                        value: 0
                    },
                    _abreviatura: {
                        type: String,
                        notify: true,
                        value:""
                    },
                    _descricao: {
                        type: String,
                        notify: true,
                        value:""
                    },
                    _activo: {
                        type: Boolean,
                        value:true
                    }
                },
                ready: function () {
                    debugger;;
                    this.$.page_databound_ajax.body = JSON.stringify({ "id": this._idtipodetail });
                    this.$.page_databound_ajax.generateRequest();

                    var _this = this;

                    var gridToBottomTimeout;
                    $(window).resize(function () {
                        _this.fixGridToBottom();
                    });
                    $(window).trigger('resize');
                },
                _responseProcessor: function (data) {
                    debugger;;
                    if (data.detail.status === 200) {

                    }
                },
                fixGridToBottom: function () {
                    var grid_el = $(this.$.gridFundamentosTipo);
                    var parentHeight = $(this).offsetParent().height();
                    var offsetTop = $(this).offset().top;
                    var height = parentHeight - offsetTop;
                    $(this.$.gridFundamentosTipo).height(height);
                },
                _goBack: function (e) {
                    window.history.back();
                }
            });
        });
    </script>
</dom-module>

