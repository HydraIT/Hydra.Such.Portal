<h1 class="title">Configuração Preço Venda Recursos Folha de Horas</h1>

<x-group-cont-product></x-group-cont-product>

<dom-module id="x-group-cont-product">
    <template>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/main.css" />
        <style>
            input[readonly] {
                border: 2px solid transparent;
            }

            input {
                font: inherit;
            }

            paper-input {
                max-width: 450px !important;
            }
        </style>

        <iron-ajax url="/Administracao/GetConfiguracaoPrecoVendaRecursoFH"
                   last-response="{{result}}"
                   method="post"
                   auto
                   handle-as="json"
                   id="ajax_GetAll"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/Administracao/UpdatePrecoVendaRecursoFH"
                   last-response="{{result}}"
                   method="post"
                   on-response="_updateResponse"
                   handle-as="json"
                   id="ajax_update"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/Administracao/CreateConfiguracaoPrecoVendaRecursoFH"
                   last-response="{{createResult}}"
                   method="post"
                   on-response="_createResponse"
                   handle-as="json"
                   id="ajax_create"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/Administracao/DeletePrecoVendaRecursoFH"
                   last-response="{{deleteResult}}"
                   method="post"
                   on-response="_deleteResponse"
                   handle-as="json"
                   id="ajax_delete"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/PopulateDropdowns/PrecoVendaRecurso_Code"
                   last-response="{{LResourceCode}}"
                   auto
                   method="post"
                   handle-as="json"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/PopulateDropdowns/PrecoVendaRecurso_CodeTipoTrabalho"
                   last-response="{{LCodeTipoTrabalho}}"
                   auto
                   method="post"
                   handle-as="json"
                   content-type="application/json">
        </iron-ajax>

        <iron-ajax url="/Administracao/GetRecurso"
                   last-response="{{recursoChange}}"
                   method="post"
                   handle-as="json"
                   id="page_recursoChange_ajax"
                   on-response="_recursoChangeResponse"
                   content-type="application/json">
        </iron-ajax>



        <div class="row" id="configuracaoPrecoVendaRecurso">
            <div class="col-sm-3">
                <vaadin-combo-box items="[[LResourceCode]]" id="code" item-value-path="id" item-label-path="value" label="Código" value="{{tipoHora}}" disabled="{{ _permissionsCreate }}" required error-message="Este campo é obrigatório">
                    <template>
                        <paper-icon-item>
                            <paper-item-body two-line>
                                <div>[[item.value]]</div>
                            </paper-item-body>
                        </paper-icon-item>
                    </template>
                </vaadin-combo-box>
            </div>

            @*<div class="col-sm-1">
                <vaadin-text-field id="descricao" value="{{descricao}}" label="Descrição" disabled="true" maxlength="10"></vaadin-text-field>
            </div>*@

            <div class="col-sm-2">
                <vaadin-combo-box items="[[LCodeTipoTrabalho]]" id="codTipoTrabalho" item-value-path="id" item-label-path="value" label="Tipo Trabalho" value="{{codTipoTrabalho}}" disabled="{{ _permissionsCreate }}" required error-message="Este campo é obrigatório">
                    <template>
                        <paper-icon-item>
                            <paper-item-body two-line>
                                <div>[[item.value]]</div>
                            </paper-item-body>
                        </paper-icon-item>
                    </template>
                </vaadin-combo-box>
            </div>

            <div class="col-sm-1">
                <vaadin-text-field id="precoUnitario" value="{{precoUnitario}}" label="Preço Unitário" disabled="{{ _permissionsCreate }}" maxlength="10"></vaadin-text-field>
            </div>

            <div class="col-sm-1">
                <vaadin-text-field id="custoUnitario" value="{{custoUnitario}}" label="Custo Unitário" disabled="{{ _permissionsCreate }}" maxlength="10"></vaadin-text-field>
            </div>

            <div class="col-sm-2">
                <vaadin-date-picker id="startingDate" value="{{startingDate}}" label="Data Início" disabled="{{ _permissionsCreate }}" required error-message="Este campo é obrigatório" maxlength="10"></vaadin-date-picker>
            </div>

            <div class="col-sm-2">
                <vaadin-date-picker id="endingDate" value="{{endingDate}}" label="Data Fim" disabled="{{ _permissionsCreate }}" maxlength="10"></vaadin-date-picker>
            </div>

            @*<div class="col-sm-1">
                <vaadin-text-field id="familiaRecurso" value="{{familiaRecurso}}" label="Fam Recurso" disabled="true" maxlength="10"></vaadin-text-field>
            </div>*@

            <div class="col-sm-1 alignPoga">
                <paper-button id="btnAddNew" class="btnSave" on-tap="_create" disabled="{{ _permissionsCreate }}">Criar</paper-button>
            </div>
        </div>

        <br />

        <vaadin-grid id="gridPrecoVendaRecursoFH" aria-label="ProfileModelsTabel" items="[[result]]" class="grid" multi-sort="true">
            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="code">Código</vaadin-grid-sorter>
                    <vaadin-grid-filter path="code" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.code}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="descricao">Descrição</vaadin-grid-sorter>
                    <vaadin-grid-filter path="descricao" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.descricao}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="codTipoTrabalho">Cód. Tipo Trabalho</vaadin-grid-sorter>
                    <vaadin-grid-filter path="codTipoTrabalho" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.codTipoTrabalho}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="precoUnitario">Preço Unitário</vaadin-grid-sorter>
                    <vaadin-grid-filter path="precoUnitario" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.precoUnitario}}" disabled="{{ _permissionsUpdate }}"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="custoUnitario">Custo Unitário</vaadin-grid-sorter>
                    <vaadin-grid-filter path="custoUnitario" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.custoUnitario}}" disabled="{{ _permissionsUpdate }}"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="startingDate">Data Início</vaadin-grid-sorter>
                    <vaadin-grid-filter path="startingDate" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.startingDate}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>@*width="200px">*@
                <template class="header">
                    <vaadin-grid-sorter path="endingDate">Data Fim</vaadin-grid-sorter>
                    <vaadin-grid-filter path="endingDate" />
                </template>
                <template>
                    @*<vaadin-text-field value="{{item.endingDate}}" disabled="{{ _permissionsUpdate }}"></vaadin-text-field>*@
                    <vaadin-date-picker value="{{item.endingDateTexto}}" disabled="{{ _permissionsUpdate }}"></vaadin-date-picker>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="familiaRecurso">Família recurso</vaadin-grid-sorter>
                    <vaadin-grid-filter path="familiaRecurso" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.familiaRecurso}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="criadoPor">Criado Por</vaadin-grid-sorter>
                    <vaadin-grid-filter path="criadoPor" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.utilizadorCriacao}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="dataHoraCriacao">Data/Hora criação</vaadin-grid-sorter>
                    <vaadin-grid-filter path="dataHoraCriacao" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.dataHoraCriacao}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="alteradoPor">Alterado Por</vaadin-grid-sorter>
                    <vaadin-grid-filter path="alteradoPor" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.utilizadorModificacao}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column resizable>
                <template class="header">
                    <vaadin-grid-sorter path="dataHoraUltimaAlteracao">Data/Hora Última Alteração</vaadin-grid-sorter>
                    <vaadin-grid-filter path="dataHoraUltimaAlteracao" />
                </template>
                <template>
                    <vaadin-text-field value="{{item.dataHoraModificacao}}" disabled="true"></vaadin-text-field>
                </template>
            </vaadin-grid-column>

            <vaadin-grid-column>
                <template class="header">
                </template>
                <template>
                    <center>
                        <paper-button class="btnRemove" raised on-tap="_delete" disabled="{{ _permissionsDelete }}">Eliminar</paper-button>
                    </center>
                </template>
            </vaadin-grid-column>
        </vaadin-grid>

        <div class="marginSpace">
            <paper-button raised id="btnGoBack" class="btnDefault" on-tap="_goBack"><i class="fa fa-arrow-left" aria-hidden="true"></i>&nbsp; Voltar</paper-button>
            <paper-button raised id="btnAddNew" class="btnEdit" on-tap="_update" disabled="{{ _permissionsUpdate }}"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp; Guardar</paper-button>
            <paper-button raised id="btnCancel" class="btnRemove" on-tap="_cancel" disabled="{{ _permissionsUpdate }}"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp; Cancelar</paper-button>
        </div>

        <paper-toast id="ToastMessage" duration="4000" horizontalAlign="right"></paper-toast>
        <paper-toast id="ToastError" style="background-color:red" duration="4000" horizontalAlign="right"></paper-toast>

    </template>

    <script>
        var CreateValue = true, UpdateValue = true, DeleteValue = true;

        if ('@Html.Raw(Json.Serialize(ViewBag.CreatePermissions))' == "false") {
            CreateValue = false;
        }

        if ('@Html.Raw(Json.Serialize(ViewBag.UpdatePermissions))' == "false") {
            UpdateValue = false;
        }

        if ('@Html.Raw(Json.Serialize(ViewBag.DeletePermissions))' == "false") {
            DeleteValue = false;
        }

        document.addEventListener('WebComponentsReady',
        function () {
            Polymer({
                is: 'x-group-cont-product',
                properties: {
                    _permissionsUpdate: {
                        type: Boolean,
                        value: UpdateValue
                    },

                    _permissionsCreate: {
                        type: Boolean,
                        value: CreateValue
                    },

                    _permissionsDelete: {
                        type: Boolean,
                        value: DeleteValue
                    },

                    ddgroupcontprod: {
                        type: String,
                        notify: true,
                        value: ""
                    }
                },

                ready: function () {
                    this.$.ajax_GetAll.generateRequest();
                },

                openToast: function (message) {
                    this.$.ToastMessage.text = message;
                    this.$.ToastMessage.open();
                },

                _openToastError: function (message) {
                    this.$.ToastError.text = message;
                    this.$.ToastError.open();
                },

                _validateData: function (container) {

                    var polymerDom = Polymer.dom(this.$[container]);
                    var errors = 0;
                    var formSelector = "vaadin-text-field, vaadin-date-picker, vaadin-combo-box";
                    var formFields = polymerDom.querySelectorAll(formSelector);

                    formFields.forEach(function (element) {
                        if (!element.validate()) errors++;
                    });

                    if (errors > 0) {
                        this._openToastError("Verifique os dados inseridos.");
                        return false;
                    }

                    return true;
                },

                _create: function () {
                    debugger;
                    if (this._validateData("configuracaoPrecoVendaRecurso")) {

                        this.$.ajax_create.body = JSON.stringify(
                            {
                                code: this.$.code.value,
                                codTipoTrabalho: this.$.codTipoTrabalho.value,
                                precoUnitario: parseFloat(this.$.precoUnitario.value),
                                custoUnitario: parseFloat(this.$.custoUnitario.value),
                                startingDate: this.$.startingDate.value,
                                endingDate: this.$.endingDate.value,
                            }
                        );
                        this.$.ajax_create.generateRequest();
                        this.$.gridPrecoVendaRecursoFH.clearCache();
                    }
                },

                _update: function () {
                    this.$.ajax_update.body = JSON.stringify(this.result);
                    this.$.ajax_update.generateRequest();
                    this.$.gridPrecoVendaRecursoFH.clearCache();
                },

                _delete: function (e) {

                    this.$.ajax_delete.body = JSON.stringify(e.model.item);
                    this.$.ajax_delete.generateRequest();
                    this.result = this.result.filter(function (item) {
                        return item != e.model.item;
                    });
                    this.$.gridPrecoVendaRecursoFH.clearCache();
                },

                _cancel: function () {
                    this.$.ajax_GetAll.generateRequest();
                    this.$.gridPrecoVendaRecursoFH.clearCache();
                },

                _recursoChange: function (e) {
                    debugger;
                    this.$.page_recursoChange_ajax.body = JSON.stringify({
                        code: this.$.code.value
                    });
                    this.$.page_recursoChange_ajax.generateRequest();
                    //this.$.tabAjuda.clearCache();
                },



                _updateResponse: function (e) {
                    var self = this;
                    if (e.detail.status === 200) {
                        this.$.ajax_GetAll.generateRequest();
                        this.openToast("Tabela atualizada.");
                    }
                    else {
                        this.openToast("Occorreu um erro ao atualizar a Tabela.");
                    }
                },

                _createResponse: function (e) {
                    var self = this;
                    if (e.detail.status === 200) {

                        this.$.code.value = "";
                        this.$.codTipoTrabalho.value = "";
                        this.$.precoUnitario.value = "";
                        this.$.custoUnitario.value = "";
                        this.$.startingDate.value = "";
                        this.$.endingDate.value = "";

                        this.$.ajax_GetAll.generateRequest();
                        this.openToast("Tabela atualizada.");
                    }
                    else {
                        this.openToast("Occorreu um erro ao atualizar a Tabela.");
                    }
                },

                _deleteResponse: function (e) {
                    var self = this;
                    if (e.detail.status === 200) {
                        this.$.ajax_GetAll.generateRequest();
                        this.openToast("Tabela atualizada.");
                    }
                    else {
                        this.openToast("Occorreu um erro ao atualizar a Tabela.");
                    }
                },

                _recursoChangeResponse: function (e) {
                    debugger;;
                    if (this.recursoChange != null) {
                        this.$.descricao.value = this.recursoChange.name;
                        this.$.familiaRecurso.value = this.recursoChange.resourceGroup;
                    }
                    else {
                        this._showErrorMessage('Ocorreu um erro ao pesquissar o Recurso.');
                    }
                },


                _goBack: function (e) {
                    window.location = "../";
                }
            });
        });
    </script>
</dom-module>
