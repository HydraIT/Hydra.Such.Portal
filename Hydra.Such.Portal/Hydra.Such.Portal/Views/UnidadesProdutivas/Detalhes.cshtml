
@{
    ViewData["Title"] = "Detalhes Unidade Produtiva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="import" href="/lib/paper-tabs-master/paper-tab.html" />
<link rel="import" href="/lib/paper-tabs-master/paper-tabs.html" />
<link rel="import" href="/lib/iron-pages-master/iron-pages.html" />
<link rel="import" href="/lib/iron-menu-behavior/iron-menubar-behavior.html" />
<link rel="import" href="/lib/iron-form/iron-form.html" />
<link rel="import" href="/lib/paper-button/paper-button.html" />
<link rel="import" href="/lib/paper-button/paper-button.html" />
<link rel="import" href="/lib/paper-toast-master/paper-toast.html" />
<link rel="import" href="/lib/vaadin-valo-theme/vaadin-date-picker.html">
<link rel="import" href="/lib/vaadin-valo-theme/vaadin-checkbox.html">
<link rel="import" href="/lib/vaadin-text-field/vaadin-text-field.html">
<link rel="import" href="/lib/vaadin-date-picker/vaadin-date-picker.html">
<link rel="import" href="/lib/vaadin-grid/vaadin-grid.html">
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-filter.html">
<link rel="import" href="/lib/vaadin-grid/vaadin-grid-sorter.html">
<link rel="import" href="/lib/vaadin-checkbox/vaadin-checkbox.html">
<link rel="import" href="/lib/vaadin-combo-box/vaadin-combo-box.html" />
<link rel="import" href="/lib/such-selectbox/such-selectbox.html">
<!--ACORDEÃO-->
<link rel="import" href="/lib/paper-collapse-item/paper-collapse-group.html">
<link rel="import" href="/lib/paper-collapse-item/paper-collapse-item.html">

<x-productivityunitdetails _permissions='@Html.Raw(Json.Serialize(ViewBag.UPermissions))'></x-productivityunitdetails>
<dom-module id="x-productivityunitdetails">
    <template>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="/css/main.css" />

        <style>
            vaadin-combo-box {
                margin-top: 0px !important;
                width: 100% !important;
            }

            vaadin-date-picker {
                margin-top: 0px !important;
                width: 100% !important;
            }

            vaadin-text-field {
                margin-top: 0px !important;
                width: 100%;
            }

            paper-button {
                margin-top: 10px;
            }

            .break_clear {
                margin-top: 15px;
                margin-right: 0px !important;
                margin-left: 0px !important;
            }

            .break_frm {
                margin-top: 15px;
            }

            .marginSpace {
                margin: 0px !important;
            }
            /*ACORDEÃO*/
            paper-collapse-item {
                --paper-item: {
                    padding: 0 0;
                };
                --paper-collapse-item-header: {
                    padding: 0 15px;
                    color: #333;
                    background-color: #f5f5f5;
                    border-bottom: solid #ddd 1px;
                    border-top-left-radius: 3px;
                    border-top-right-radius: 3px;

                };
            }
        </style>

        @*POPULATE GRID*@
        <iron-ajax url="/UnidadesProdutivas/GetProductivityUnitData"
                   last-response="{{data}}"
                   method="post"
                   handle-as="json"
                   id="grid_databound"
                   on-response="_responseProcessor"
                   content-type="application/json"></iron-ajax>

        <iron-ajax url="/UnidadesProdutivas/DeleteProductivityUnit"
                   last-response="{{deletedData}}"
                   method="post"
                   handle-as="json"
                   id="ajax_delete"
                   on-response="_deleteResponse"
                   content-type="application/json"></iron-ajax>


        @*POPULATE DROPDOWNS*@
        <iron-ajax url="/PopulateDropdowns/GetResponsabilityCenterCode" last-response="{{CBResponsabilityCenters}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetRegionCode" last-response="{{CBRegions}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetFunctionalAreaCode" last-response="{{CBFunctionalAreas}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetAllClientsComboGrid" last-response="{{CBClients}}" auto method="post" handle-as="json" content-type="application/json" id="clients_ajax"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetProjectList" last-response="{{CBProjects}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetLocations" last-response="{{CBWarehouses}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetNutritionCoffeShopTypes" last-response="{{CBCoffeShopTypes}}" auto method="post" handle-as="json" content-type="application/json"></iron-ajax>


        @*EXTRAS*@
        <iron-ajax url="/UnidadesProdutivas/GetProjectBillingInfo" last-response="{{PBInfo}}" id="projectBillingData_Ajax" on-response="_projectBillingDataResponse" method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/UnidadesProdutivas/GetProjectBillingInfo" last-response="{{PBInfoGrid}}" id="projectBillingData_AjaxGrid" on-response="_projectBillingDataResponseGrid" method="post" handle-as="json" content-type="application/json"></iron-ajax>

        <iron-ajax url="/UnidadesProdutivas/GetProjectTotalMovsInfo" last-response="{{PKInfo}}" id="projectKitchenData_Ajax" method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/UnidadesProdutivas/GetProjectTotalMovsInfo" last-response="{{PWInfo}}" id="projectWasteData_Ajax" method="post" handle-as="json" content-type="application/json"></iron-ajax>
        <iron-ajax url="/UnidadesProdutivas/GetProjectTotalMovsInfo" last-response="{{PSInfo}}" id="projectWasteData_Ajax" method="post" handle-as="json" content-type="application/json"></iron-ajax>

        <div class="subMenu">
            <paper-button class="tablinks" on-tap="_goBack" title="Voltar"><i class="fa fa-arrow-left" aria-hidden="true"></i> Voltar</paper-button>

            <template is="dom-if" if="{{ _permissions.create }}">
                <template is="dom-if" if="{{ !_isCreate }}">
                    <paper-button class="tablinks" on-tap="_redirectToNew"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Criar Novo</paper-button>
                </template>
            </template>
            <paper-button class="tablinks" on-tap="_PurchaseNeeds"><i class="fa fa-chevron-circle-down" aria-hidden="true"></i>Produtos p/ Criação de Encomendas</paper-button>
            <paper-button class="tablinks" on-tap="_PurchaseDirectNeeds"><i class="fa fa-get-pocket" aria-hidden="true"></i>Produtos p/ Criação de Encomendas de Compras Diretas</paper-button>
        </div>

        <div class="row break_frm">
            <div class="col-md-12 col-md-12 col-lg-12">
                <iron-form id="formContract">
                    <div class="panel panel-default">
                        <div class="panel-heading">Cabeçalho</div>
                        <div class="panel-body">

                            <paper-tabs fit-container no-slide autoselect autoselect-delay="0" selected="{{selected}}">
                                <paper-tab>Geral</paper-tab>
                                <paper-tab>Projetos de Faturação</paper-tab>
                                <paper-tab>Cafetarias / Refeitórios</paper-tab>
                            </paper-tabs>
                            <iron-pages selected="{{selected}}">
                                <!--Geral-->
                                <div>
                                    <div class="row break_clear">
                                        <div class="col-md-3 ">
                                            <vaadin-text-field id="productivityUnitNo" name="productivityUnitNo" label="Nº Unidade Produtiva" value="{{data.productivityUnitNo}}" disabled="true"></vaadin-text-field>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-text-field value="{{data.description}}" id="Description" name="Description" label="Descrição" disabled="{{ !_permissions.update }}" required error-message="Este campo é obrigatório"> </vaadin-text-field>
                                        </div>
                                        <div class="col-md-3 ">
                                            <such-selectbox id="mClients" value="{{data.clientNo}}" label="Nº Cliente"
                                                            items="[[CBClients]]"
                                                            text-path="name"
                                                            value-path="no_"
                                                            fields='[{"field":"no_", "name":"Cód. Cliente"}, {"field":"name", "name":"Nome"}, {"field":"address", "name":"Morada"}, {"field":"postCode", "name":"Cód. Postal"}, {"field":"city", "name":"Cidade"}, {"field":"country_RegionCode", "name":"Região"}, {"field":"country_RegionCode", "name":"Região"}]'
                                                            disabled="{{ !_permissions.update }}">
                                            </such-selectbox>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-date-picker label="Data Inicio Exploração" id="startDateExploration" name="startDateExploration" value="{{data.startDateExploration}}" disabled="{{ !_permissions.update }}"></vaadin-date-picker>
                                        </div>
                                    </div>
                                    <div class="row break_clear">
                                        <div class="col-md-3 ">
                                            <vaadin-date-picker label="Data Fim Exploração" id="endDateExploration" name="endDateExploration" value="{{data.endDateExploration}}" disabled="{{ !_permissions.update }}"></vaadin-date-picker>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-combo-box items="[[CBWarehouses]]" id="warehouse" item-value-path="id" item-label-path="value" value="{{data.warehouse}}" label="Armazén" disabled="{{ !_permissions.update }}">
                                                <template>
                                                    <table width="180px">
                                                        <tr>
                                                            <td width="40%">[[item.id]]</td>
                                                            <td width="60%"> <b>[[item.value]]</b></td>
                                                        </tr>
                                                    </table>
                                                </template>
                                            </vaadin-combo-box>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-combo-box items="[[CBWarehouses]]" id="warehouseSupplier" item-value-path="id" item-label-path="value" value="{{data.warehouseSupplier}}" label="Armazén Fornecedor" disabled="{{ !_permissions.update }}">
                                                <template>
                                                    <table width="180px">
                                                        <tr>
                                                            <td width="40%">[[item.id]]</td>
                                                            <td width="60%"> <b>[[item.value]]</b></td>
                                                        </tr>
                                                    </table>
                                                </template>
                                            </vaadin-combo-box>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-combo-box items="[[CBRegions]]" id="mCodeRegion" item-value-path="id" item-label-path="value" value="{{data.codeRegion}}" label="Cód. Região" disabled="{{ !_permissions.update }}">
                                                <template>
                                                    <table width="180px">
                                                        <tr>
                                                            <td width="40%">[[item.id]]</td>
                                                            <td width="60%"> <b>[[item.value]]</b></td>
                                                        </tr>
                                                    </table>
                                                </template>
                                            </vaadin-combo-box>
                                        </div>
                                    </div>
                                    <div class="row break_clear">
                                        <div class="col-md-3 ">
                                            <vaadin-combo-box items="[[CBFunctionalAreas]]" id="mFunctionalArea" item-value-path="id" item-label-path="value" value="{{data.codeFunctionalArea}}" label="Cód. Area Funcional" disabled="{{ !_permissions.update }}">
                                                <template>
                                                    <table width="500px">
                                                        <tr>
                                                            <td width="10%">[[item.id]]</td>
                                                            <td width="90%"> <b>[[item.value]]</b></td>
                                                        </tr>
                                                    </table>
                                                </template>
                                            </vaadin-combo-box>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-combo-box items="[[CBResponsabilityCenters]]" id="mResponsabilityCenter" item-value-path="id" item-label-path="value" value="{{data.codeResponsabilityCenter}}" label="Cód. Centro Responsabilidade" disabled="{{ !_permissions.update }}">
                                                <template>
                                                    <table width="550px">
                                                        <tr>
                                                            <td width="20%">[[item.id]]</td>
                                                            <td width="80%"> <b>[[item.value]]</b></td>
                                                        </tr>
                                                    </table>
                                                </template>
                                            </vaadin-combo-box>
                                        </div>
                                        <div class="col-md-3 ">
                                            <such-selectbox id="projectKitchen" value="{{data.projectKitchen}}" label="Projeto Cozinha"
                                                            items="[[CBProjects]]"
                                                            text-path="value"
                                                            value-path="id"
                                                            fields='[{"field":"id", "name":"Cód."}, {"field":"value", "name":"Descrição"}]'
                                                            disabled="{{ !_permissions.update }}"
                                                            on-value-changed="_projectKitchenChange">
                                            </such-selectbox>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-text-field value="{{data.projectKitchenTotalMovs}}" id="projectKitchenTotalMovs" name="projectKitchenTotalMovs" label="Mov. Projeto Cozinha" disabled> </vaadin-text-field>
                                        </div>
                                    </div>

                                    <div class="row break_clear">
                                        <div class="col-md-3 ">
                                            <such-selectbox id="projectWaste" value="{{data.projectWaste}}" label="Projeto Desperdicios"
                                                            items="[[CBProjects]]"
                                                            text-path="value"
                                                            value-path="id"
                                                            fields='[{"field":"id", "name":"Cód."}, {"field":"value", "name":"Descrição"}]'
                                                            disabled="{{ !_permissions.update }}"
                                                            on-value-changed="_projectWasteChange">
                                            </such-selectbox>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-text-field value="{{data.projectWasteTotalMovs}}" id="projectWasteTotalMovs" name="projectWasteTotalMovs" label="Mov. Projeto Desperdicios" disabled> </vaadin-text-field>
                                        </div>
                                        <div class="col-md-3 ">
                                            <such-selectbox id="projectSubsidiaries" value="{{data.projectSubsidiaries}}" label="Projeto Mat. Subsidiárias"
                                                            items="[[CBProjects]]"
                                                            text-path="value"
                                                            value-path="id"
                                                            fields='[{"field":"id", "name":"Cód."}, {"field":"value", "name":"Descrição"}]'
                                                            disabled="{{ !_permissions.update }}"
                                                            on-value-changed="_projectSubsidiariesChange">
                                            </such-selectbox>
                                        </div>
                                        <div class="col-md-3 ">
                                            <vaadin-text-field value="{{data.projectSubsidiariesTotalMovs}}" id="projectSubsidiariesTotalMovs" name="projectSubsidiariesTotalMovs" label="Mov. Projeto Subsidiárias" disabled> </vaadin-text-field>
                                        </div>
                                    </div>
                                </div>




                                <!-- Projetos de Faturação-->
                                <div>
                                    <div class="row break_clear">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Projetos de Faturação</div>
                                            <div class="panel-body">

                                                <paper-collapse-group>
                                                    <paper-collapse-item class="panel-heading" header="Criar" closed>
                                                        <div class="row">
                                                            <div class="col-lg-3">
                                                                <vaadin-combo-box items="[[CBProjects]]" id="BPProjectNo" name="BPProjectNo" item-value-path="id" item-label-path="value" label="Projeto" disabled="{{ !_permissions.update }}" on-value-changed="_getProjectBillingData">
                                                                    <template>
                                                                        <table width="300px">
                                                                            <tr>
                                                                                <td width="30%">[[item.id]]</td>
                                                                                <td width="70%"> <b>[[item.value]]</b></td>
                                                                            </tr>
                                                                        </table>
                                                                    </template>
                                                                </vaadin-combo-box>
                                                            </div>
                                                            <div class="col-lg-3">
                                                                <vaadin-text-field id="BPClientNo" name="BPClientNo" label="Cód. Cliente" disabled> </vaadin-text-field>
                                                            </div>
                                                            <div class="col-lg-3">
                                                                <vaadin-text-field id="BPClientName" name="BPClientName" label="Cliente" disabled> </vaadin-text-field>
                                                            </div>
                                                            <div class="col-lg-2">
                                                                <vaadin-text-field id="BPTotalSales" name="BPTotalSales" label="Total de Vendas" disabled> </vaadin-text-field>
                                                            </div>
                                                            <div class="col-lg-1">
                                                                <paper-button class="btnSave" raised on-tap="_createBillingProject">Criar</paper-button>
                                                            </div>
                                                        </div>
                                                    </paper-collapse-item>
                                                </paper-collapse-group>
                                                <!-- VAADIN GRID  Projetos de Faturação -->
                                                <vaadin-grid aria-label="BillingProjectsGrid" id="grid_BillingProjectsGrid" items="[[data.billingProjects]]" class="grid" multi-sort="true" disabled="{{ !_permissions.update }}" active-item="{{_SelectedLine}}">
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="projectNo">Nº Projeto</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="projectNo" />
                                                        </template>
                                                        <template>
                                                            <template is="dom-if" if="{{ item.selected }}">
                                                                <vaadin-combo-box items="[[CBProjects]]" id="BPProjectNoGrid" name="BPProjectNoGrid" item-value-path="id" item-label-path="value" value="{{item.projectNo}}" disabled="{{ !_permissions.update }}" on-value-changed="_getProjectBillingDataGrid">
                                                                    <template>
                                                                        <table width="300px">
                                                                            <tr>
                                                                                <td width="30%">[[item.id]]</td>
                                                                                <td width="70%"> <b>[[item.value]]</b></td>
                                                                            </tr>
                                                                        </table>
                                                                    </template>
                                                                </vaadin-combo-box>
                                                            </template>
                                                            <template is="dom-if" if="{{ !item.selected }}">
                                                                {{item.projectNo}}
                                                            </template>
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="clientNo">Cód Cliente</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="clientNo" />
                                                        </template>
                                                        <template>
                                                            <template is="dom-if" if="{{ item.selected }}">
                                                                <vaadin-text-field id="BPGridClientNo" name="BPClientNo" disabled value="{{item.clientNo}}">  </vaadin-text-field>
                                                            </template>
                                                            <template is="dom-if" if="{{ !item.selected }}">
                                                                {{item.clientNo}}
                                                            </template>
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="clientName">Cliente</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="clientName" />
                                                        </template>
                                                        <template>
                                                            <template is="dom-if" if="{{ item.selected }}">
                                                                <vaadin-text-field id="BPGridClientName" name="BPClientName" disabled value="{{item.clientName}}">  </vaadin-text-field>
                                                            </template>
                                                            <template is="dom-if" if="{{ !item.selected }}">
                                                                {{item.clientName}}
                                                            </template>
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="totalSales">Total de Vendas</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="totalSales" />
                                                        </template>
                                                        <template>
                                                            <template is="dom-if" if="{{ item.selected }}">
                                                                <vaadin-text-field id="BPGridTotalSales" name="BPTotalSales" disabled value="{{item.totalSales}}">  </vaadin-text-field>
                                                            </template>
                                                            <template is="dom-if" if="{{ !item.selected }}">
                                                                {{item.totalSales}}
                                                            </template>
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                        </template>
                                                        <template>
                                                            <center>
                                                                <template is="dom-if" if="{{ _permissions.update }}">
                                                                    <paper-button class="btnRemove" raised on-tap="_deleteClientRequisition">Eliminar</paper-button>
                                                                </template>
                                                            </center>
                                                        </template>
                                                    </vaadin-grid-column>
                                                </vaadin-grid>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Cafetarias / Refeitórios -->
                                <div>
                                    <div class="row break_clear">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">Cafetarias / Refeitórios</div>
                                            <div class="panel-body">
                                                <!-- VAADIN GRID  Projetos de Faturação -->
                                                <vaadin-grid aria-label="BillingProjectsGrid" id="grid_ClientRequisitions" items="[[data.coffeeShops]]" class="grid" active-item="{{activeItem}}" multi-sort="true" disabled="{{ !_permissions.update }}">
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="type">Tipo</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="type" />
                                                        </template>
                                                        <template>
                                                            {{item.type}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="code">Código</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="code" />
                                                        </template>
                                                        <template>
                                                            {{item.code}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="description">Descrição</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="description" />
                                                        </template>
                                                        <template>
                                                            {{item.description}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="projectNo">Projeto</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="projectNo" />
                                                        </template>
                                                        <template>
                                                            {{item.projectNo}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="balance">Saldo</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="balance" />
                                                        </template>
                                                        <template>
                                                            {{item.balance}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                    <vaadin-grid-column>
                                                        <template class="header">
                                                            <vaadin-grid-sorter path="totalCosts">Total Custos</vaadin-grid-sorter>
                                                            <vaadin-grid-filter path="totalCosts" />
                                                        </template>
                                                        <template>
                                                            {{item.totalCosts}}
                                                        </template>
                                                    </vaadin-grid-column>
                                                </vaadin-grid>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </iron-pages>
                            <div class="marginSpace">
                                <template is="dom-if" if="{{ _permissions.update }}">
                                    <template is="dom-if" if="{{ _isCreate }}">
                                        <paper-button raised id="btnCreate" class="btnSave" on-tap="_create"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Criar</paper-button>
                                    </template>
                                    <template is="dom-if" if="{{ !_isCreate }}">
                                        <template is="dom-if" if="{{ _permissions.update }}">
                                            <paper-button raised id="btnUpdate" class="btnSave" on-tap="_update"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp; Guardar</paper-button>
                                        </template>
                                    </template>
                                    <template is="dom-if" if="{{ _permissions.delete }}">
                                        <paper-button raised id="btnDelete" class="btnRemove" on-tap="_delete"><i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp; Eliminar</paper-button>
                                    </template>
                                </template>
                            </div>
                        </div>
                    </div>
                </iron-form>
            </div>
        </div>

