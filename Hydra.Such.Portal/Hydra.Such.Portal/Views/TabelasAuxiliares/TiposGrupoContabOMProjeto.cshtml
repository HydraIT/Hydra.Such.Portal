
@{
    ViewData["Title"] = "TiposGrupoContabOMProjeto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="import" href="~/lib/vaadin-themable-mixin/vaadin-themable-mixin.html" />
<link rel="import" href="~/lib/vaadin-grid/vaadin-grid.html" />
<link rel="import" href="~/lib/vaadin-grid/vaadin-grid-sorter.html" />
<link rel="import" href="~/lib/vaadin-grid/vaadin-grid-sort-behavior.html" />
<link rel="import" href="~/lib/vaadin-grid/vaadin-grid-filter.html" />
<link rel="import" href="~/lib/vaadin-grid/vaadin-grid-filter-behavior.html" />
<link rel="import" href="~/lib/vaadin-date-picker/vaadin-date-picker.html" />
<link rel="import" href="~/lib/iron-form/iron-form.html" />
<link rel="import" href="~/lib/paper-input/paper-input.html" />
<link rel="import" href="~/lib/paper-checkbox-master/paper-checkbox.html" />
<link rel="import" href="/lib/vaadin-combo-box/vaadin-combo-box.html" />
<link rel="import" href="~/lib/paper-button/paper-button.html" />
<link rel="import" href="/lib/paper-toast-master/paper-toast.html" />

<h1 class="title">Tipos Grupos Contabilísticos OM</h1>

<x-contab-group-types-om></x-contab-group-types-om>

<dom-module id="x-contab-group-types-om">
    <template>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="/css/main.css" />


        <custom-style>
            <style is="custom-style">
                input[readonly] {
                    border: 2px solid transparent;
                }

                input {
                    font: inherit;
                }

                paper-input {
                    max-width: 450px !important;
                }
            </style>
        </custom-style>

        @*POPULATE GRID*@
        <iron-ajax url="/TabelasAuxiliares/GetTiposGrupoContabOMProjeto"
                   last-response="{{result}}"
                   method="post"
                   auto
                   handle-as="json"
                   id="page_databound_ajax"
                   on-response="_updateResponse"
                   content-type="application/json">
        </iron-ajax>

        @*CRUD - Populate Combos*@
        <iron-ajax url="/PopulateDropdowns/GetContabGroupTypesOM_Type"
                   last-response="{{CGTOM_Type}}"
                   auto
                   method="post"
                   handle-as="json"
                   content-type="application/json">
        </iron-ajax>
        <iron-ajax url="/PopulateDropdowns/GetContabGroupTypesOM_FailType"
                   last-response="{{CGTOM_FailType}}"
                   auto
                   method="post"
                   handle-as="json"
                   content-type="application/json">
        </iron-ajax>
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <h2 class="separator">Geral</h2>
                    </div>
                </div>

        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <paper-input type="text" name="description" required label="Descrição" value="{{ddDescription}}" char-counter maxlength="50"></paper-input>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-2">
                <vaadin-combo-box items="[[CGTOM_Type]]" item-value-path="id" item-label-path="value" value="{{ddCGTOM_Type}}" label="Tipo">
                    <template>
                        <paper-icon-item>
                            <paper-item-body two-line>
                                <div>[[item.value]]</div>
                            </paper-item-body>
                        </paper-icon-item>
                    </template>
                </vaadin-combo-box>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkCorrectiveMaintenance}}">Manut. Correctiva</paper-checkbox>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkPreventiveMaintenance}}">Manut. Preventiva</paper-checkbox>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <vaadin-combo-box items="[[CGTOM_FailType]]" item-value-path="id" item-label-path="value" value="{{ddCGTOM_FailType}}" label="Tipo Razão Falha">
                    <template>
                        <paper-icon-item>
                            <paper-item-body two-line>
                                <div>[[item.value]]</div>
                            </paper-item-body>
                        </paper-icon-item>
                    </template>
                </vaadin-combo-box>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkResponseTimeIndicator}}">Ind. Tempo Resposta</paper-checkbox>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkStopTimeIndicator}}">Ind. Tempo Imobilização</paper-checkbox>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkRepairEffectiveTimeIndicator}}">Ind. Tempo Efetivo Reparação</paper-checkbox>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                <br />
                <paper-checkbox checked="{{chkClosingWorksTimeIndicator}}">Ind. Tempo Fecho Obras</paper-checkbox>
            </div>
        </div>
    </template>

    <script>
        document.addEventListener('WebComponentsReady', function () {
            Polymer({
                is: 'x-contab-group-types-om',
                properties: {
                    ddRegion: {
                        type: Number,
                        notify: true,
                        value: ""
                    },

                    ddFunctionalArea: {
                        type: String,
                        notify: true,
                        value: ""
                    },

                    ddResponsabilityCenter: {
                        type: String,
                        notify: true,
                        value: ""
                    }
                },
                ready: function () {
                    //this.$.page_databound_ajax.generateRequest();

                },
                openToast: function (message) {
                    this.$.ToastMessage.text = message;
                    this.$.ToastMessage.open();
                },

                _update: function () {
                    //if (this.data.description !== '' && this.data.description != null) {
                    this.$.page_databound_ajax.url = "/TabelasAuxiliares/UpdateTiposGrupoContabProjeto";
                    this.$.page_databound_ajax.body = JSON.stringify(this.result);
                    //this.$.page_databound_ajax.generateRequest();
                    //this.$.page_databound_ajax.url = "/TabelasAuxiliares/GetTiposGrupoContabProjeto";
                    this.$.gridContabGroupTypes.clearCache();
                    //} else {
                    //this.openToast('É obrigatório preencher o campo Descrição.');
                    //}
                },

                _updateResponse: function (e) {
                    var self = this;
                    if (this.$.page_databound_ajax.url != "/TabelasAuxiliares/GetTiposGrupoContabProjeto") {
                        if (e.detail.status === 200) {

                            this.openToast('Atualizado com sucesso!');
                            this.$.page_databound_ajax.url = "/TabelasAuxiliares/GetTiposGrupoContabProjeto";
                            this.$.page_databound_ajax.generateRequest();

                        }
                        else {
                            this.openToast('Ocorreu um erro ao atualizar o perfil modelo.');
                        }
                    }

                },
                _cancel: function () {
                    //this.$.page_databound_ajax.url = "/TabelasAuxiliares/GetTiposGrupoContabProjeto";
                    this.$.page_databound_ajax.generateRequest();
                    this.$.gridContabGroupTypes.clearCache();
                },
                _createContabGroupType: function () {
                    this.result.unshift({

                        description: this.ddDescription,
                        region: this.ddRegion,
                        functionalAreaCode: this.ddFunctionalArea,
                        responsabilityCenter: this.ddResponsabilityCenter
                    });
                    this.$.gridContabGroupTypes.clearCache();
                },
                _deleteAccessProfile: function (data) {
                    var index = this.result.indexOf(data.model.item);
                    this.result.splice(index, 1);
                    this.$.gridContabGroupTypes.clearCache();
                }

            });
        });
    </script>
</dom-module>
